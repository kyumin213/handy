/* pages/me/cardPayment/cardPayment.wxss */

page {
  background: #005b6d;
}
.courseDesTop {
  margin: 26rpx 30rpx 22rpx 30rpx;
  border-radius: 20rpx;
  background: #fff;
  /* padding-bottom: 6rpx; */
  box-sizing: border-box;
}
.headTop {
  width: 100%;
  text-align: center;
  display: flex;
  justify-content: space-between;
  height: 120rpx;
  padding: 42rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  /* margin: 68rpx 0 154rpx 0;
  background: #fff; */
}

.money {
  font-size: 48rpx;
  margin-bottom: 32rpx;
}

.payType {
  background: #fff;
  margin: 0 30rpx 150rpx 30rpx;
  border-radius: 20rpx;
}

.payList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* margin: 0 30rpx 0 30rpx; */
  height: 104rpx;
  /* border-bottom: 2rpx solid #f2f2f2; */
  box-sizing: border-box;
}

.payList .hanTxt {
  font-size: 28rpx;
  color: #333;
  margin-left: 32rpx;
}

.payList .hanIcon {
  width: 50rpx;
  height: 50rpx;
}


.payList .payRight {
  margin-right: 32rpx;
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: flex-end;
}

.payList .hanOn {
  width: 50rpx;
  /* height: 50rpx; */
  border-radius: 100%;
}

.payList .payLeft {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-left: 26rpx;
}

.tips {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  margin: 40rpx 54rpx 0 46rpx;
  font-size: 22rpx;
  color: #999;
  /* padding-bottom: 62rpx; */
}

.payTitle {
  font-size: 36rpx;
  color: #333;
  /* padding: 52rpx 0 18rpx 0; */
  height: 106rpx;
  line-height: 106rpx;
  border-bottom: 2rpx solid #f2f2f2;
  /* margin: 0 30rpx; */
}

.payTitle .txt {
  padding-left: 28rpx;
}

.tipsRight {
  line-height: 36rpx;
}

.tips .tsTxt {
  padding-top: 6rpx;
}

.submitPayment {
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 0;
  height: 108rpx;
  line-height: 108rpx;
  color: #fff;
  background: #f96400;
}

.payment {
  font-size: 32rpx;
}

.totalMoney {
  font-size: 48rpx;
}
