/* pages/course/useCoupon/useCoupon.wxss */

page {
  background: #f5f5f5;
}

.tabSelect {
  width: 100%;
  height: 78rpx;
  background: #fff;
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
  padding: 0 94rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #474747;
}

.tabSelect .use {
  position: relative;
  height: 78rpx;
  line-height: 78rpx;
}

.tabSelect .useTxt {
  height: 100%;
  line-height: 78rpx;
  padding: 0 10rpx;
}

.tabSelect .on {
  display: inline-block;
  position: absolute;
  text-align: center;
  /* bottom: 0; *//* left: 0; */
  bottom: 0rpx;
  width: 100%;
  height: 6rpx;
  border-radius: 20rpx;
  background: #d71718;
}

/* 可用优惠券 */

.UseList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 24rpx;
  width: 690rpx;
  height: 180rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 38rpx auto 26rpx auto;
  overflow-y: hidden;
}

.UseList .useLeft {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.UseList .selectOn {
  width: 42rpx;
  height: 42rpx;
  border-radius: 100%;
}

.UseList .coupinDes {
  text-align: center;
  color: #474747;
  margin-left: 22rpx;
}

.UseList .coupinDes .txt1, .UseList .coupinDes .txt2 {
  font-size: 30rpx;
  margin-bottom: 14rpx;
}

.UseList .txt3 {
  margin-top: 28rpx;
  font-size: 22rpx;
}

.UseList .select {
  margin-left: 12rpx;
}

.UseList .useRight {
  width: 218rpx;
  height: 100%;
  background: #d71718;
  line-height: 180rpx;
  text-align: center;
  border-radius: 10rpx;
  position: relative;
}

.UseList .useRight .price {
  font-size: 56rpx;
  color: #fff;
  margin-top: 24rpx;
}

.UseList .useBtn {
  width: 120rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 16rpx;
  background: #fff;
  color: #dc1e1f;
  margin: 24rpx auto auto 52rpx;
}

.UseList .yj {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 100%;
  background: #fff;
  position: absolute;
  top: -8rpx;
  left: -10rpx;
}

.UseList .yj-bom {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 100%;
  background: #fff;
  position: absolute;
  bottom: -8rpx;
  left: -10rpx;
}

.comfir {
  width: 100%;
  height: 108rpx;
  font-size: 36rpx;
  color: #fff;
  background: #d71718;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  line-height: 108rpx;
}

/* 不可用优惠券 */

.unUseBox {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  height: 180rpx;
  background: #d71718;
  border-radius: 10rpx;
  width: 690rpx;
  margin: 36rpx auto;
  padding-left: 74rpx;
  padding-right: 38rpx;
  color: #f2f2f2;
  overflow: hidden;
}

.unUseBox .title, .unUseBox .des {
  font-size: 30rpx;
  margin-bottom: 14rpx;
}

.unUseBox .times {
  margin-top: 28rpx;
  font-size: 22rpx;
}

.unUseBox .unLeft {
  text-align: center;
}

.unUseBox .price {
  font-size: 56rpx;
}

.unUseBox .useBtn {
  width: 120rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  border-radius: 16rpx;
  background: #fff;
  color: #dc1e1f;
  font-size: 24rpx;
  margin: 22rpx auto 0 auto;
}

.unUseBox .unRight {
  text-align: center;
  position: relative;
}

.unUseBox .unRight .icon1 {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  border-radius: 100%;
  position: absolute;
  top: -48rpx;
  left: -38rpx;
}

.unUseBox .unRight .bom {
  top: 134rpx;
}

.unUseBox .unRight .icon2 {
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 100%;
  background: #fff;
  position: absolute;
  left: -32rpx;
}

.unUseBox .unRight .ic1 {
  top: -12rpx;
}

.unUseBox .unRight .ic2 {
  top: 0;
}

.unUseBox .unRight .ic3 {
  top: 12rpx;
}

.unUseBox .unRight .ic4 {
  top: 24rpx;
}

.unUseBox .unRight .ic5 {
  top: 36rpx;
}

.unUseBox .unRight .ic6 {
  top: 48rpx;
}

.unUseBox .unRight .ic7 {
  top: 60rpx;
}

.unUseBox .unRight .ic8 {
  top: 72rpx;
}

.unUseBox .unRight .ic9 {
  top: 84rpx;
}

.unUseBox .unRight .ic10 {
  top: 96rpx;
}
.unUseBox .unRight .ic11 {
  top: 108rpx;
}
/* 没有优惠券 */
.isnull{
  font-size: 28rpx;
  color: #666666;
  width: 100%;
  text-align: center;
  margin-top: 434rpx;
}