/* pages/course/useCoupon/useCoupon.wxss */

page {
  background: #f5f5f5;
}

.tabSelect {
  width: 100%;
  height: 78rpx;
  background: #fff;
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
  padding: 0 94rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #474747;
}

.tabSelect .use {
  position: relative;
  height: 78rpx;
  line-height: 78rpx;
  box-sizing: border-box;
}

.tabSelect .useTxt {
  height: 100%;
  line-height: 78rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  text-align: center;
}

.tabSelect .active {
  border-bottom: 6rpx solid #f96400;
}

.tabSelect .on {
  display: inline-block;
  position: absolute;
  text-align: center;
  /* bottom: 0; *//* left: 0; */
  bottom: 0rpx;
  width: 100%;
  height: 6rpx;
  border-radius: 20rpx;
  background: #f96400;
}

/* 可用优惠券 */

.con {
  margin-top: 34rpx;
}

.cardBox {
  width: 648rpx;
  height: 180rpx;
  margin: 24rpx auto 0 auto;
  position: relative;
}

.cardList {
  width: 648rpx;
  height: 180rpx;
  margin: 0 auto;
  overflow: hidden;
  border-radius: 20rpx;
  /* border: 4rpx solid #999; */
  position: relative;
  box-sizing: border-box;
  background: #fff;
}

.cardList .cardItems {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 174rpx;
}

.cardList .cardItems .itemLeft {
  width: 64%;
  text-align: center;
  height: 174rpx;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-right: 2rpx dashed #f96400;
  color: #231f20;
  box-sizing: border-box;
}

.cardList .cardItems .itemLeft .item2 {
  font-size: 30rpx;
}

.cardList .cardItems .item4 {
  font-size: 20rpx;
  margin-top: 16rpx;
}

.cardList .leftBy {
  position: absolute;
  top: 85rpx;
  left: -16rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 100%;
  background: #f2f2f2;
  z-index: 99;
  /* border: 4rpx solid #f2f2f2; */
}

.cardList .rightBy {
  position: absolute;
  top: 85rpx;
  right: -18rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 100%;
  background: #f2f2f2;
  z-index: 99;
  border: 4rpx solid #f2f2f2;
}

.cardList .itemLeft .item1 {
  font-size: 30rpx;
  margin-top: 50rpx;
}

.cardList .itemRight .item1 {
  /* margin-top: 32rpx; */
  font-weight: 900;
  font-size: 36rpx;
}

.cardList .item2 {
  margin-top: 18rpx;
}

.cardList .itemRight {
  text-align: center;
  width: 36%;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background: #f96400;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;

}

.cardList .item3 {
  margin: 12rpx auto 0 auto;
  width: 168rpx;
  height: 50rpx;
  background: #fff;
  border-radius: 26rpx;
  color: #f96400;
  text-align: center;
  line-height: 50rpx;
}
.cardBox .touse{
  margin-top: 60rpx;
}

.cardBox .active {
  border: 4rpx solid #f96400;
}

.cardList .activeBtn {
  color: #fff;
  background: #005b6d;
}

.cardList .cardItems .color {
  color: #231f20;
}

.cardList .cardItems .overdue {
  background: #9e9e9e;
}

.cardList .cardItems .overdueBtn {
  background: #fff;
  color: #666;
}

.cardList .cardItems .overduePrice {
  color: #fff;
}

.cardList .cardItems .userActive {
  border: 4rpx solid #f96400;
  border-right: 2rpx dashed #f96400;
}

/* 不可用优惠券 */

.cardList .cardItems .noUse {
  background: #f96400;
}

.cardList .cardItems .noUseRight {
  background: #fff;
  border-left: 2rpx dashed #f96400;
}

.cardList .cardItems .noBtn {
  background: #005b6d;
  color: #fff;
}

.cardList .cardItems .noTime {
  color: #fefefe;
}

.cardBox .checkActive {
  width: 42rpx;
  height: 42rpx;
  border-radius: 100%;
  background: #f96400;
  position: absolute;
  top: -16rpx;
  left: -10rpx;
}
.cardBox .checkActive::before{
  content: '';
  width: 20rpx;
  height: 10rpx;
  border-left: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: rotate(-45deg);
  position: absolute;
  left: 10rpx;
  top: 12rpx;
}

.comfir {
  width: 100%;
  height: 108rpx;
  font-size: 36rpx;
  color: #fff;
  background: #f96400;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  line-height: 108rpx;
}

/* 没有优惠券 */

.isnull {
  font-size: 28rpx;
  color: #666;
  width: 100%;
  text-align: center;
  margin-top: 234rpx;
}

.swiper {
  display: block;
  height: 100%;
  width: 100%;
  /* margin-top: 100rpx; */
}
