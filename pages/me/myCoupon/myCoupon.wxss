/* pages/me/myCoupon/myCoupon.wxss */

page {
  background: #f2f2f2;
}

.con {
  /* margin-bottom: 140rpx; */
  margin-top: 24rpx;
}

.cardBox {
  overflow: hidden;
  width: 648rpx;
  height: 174rpx;
  margin: 24rpx auto 0 auto;
}

.cardList {
  width: 648rpx;
  height: 180rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  /* border: 4rpx solid #999; */
  position: relative;
  box-sizing: border-box;
  background: #fff;
}

.cardList .cardItems {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 174rpx;
}

.cardList .cardItems .itemLeft {
  width: 64%;
  text-align: center;
  height: 174rpx;
  background: #f96400;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-right: 2rpx dashed #fafafa;
}

.cardList .cardItems .itemLeft .item2 {
  font-size: 30rpx;
}

.cardList .cardItems .item4 {
  font-size: 20rpx;
  color: #fefefe;
  margin-top: 16rpx;
}

.cardList .leftBy {
  position: absolute;
  top: 85rpx;
  left: -18rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 100%;
  background: #f2f2f2;
  z-index: 99;
  border: 4rpx solid #f2f2f2;
}

.cardList .rightBy {
  position: absolute;
  top: 85rpx;
  right: -18rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 100%;
  background: #f2f2f2;
  z-index: 99;
  border: 4rpx solid #f2f2f2;
}

.cardList .itemLeft .item1 {
  font-size: 30rpx;
  margin-top: 50rpx;
}


.cardList .itemRight .item1 {
  /* margin-top: 32rpx; */
  font-weight: 900;
  font-size: 36rpx;
}

.cardList .item2 {
  margin-top: 18rpx;
}

.cardList .itemRight {
  text-align: center;
  width: 36%;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.cardList .item3 {
  margin: 12rpx auto 0 auto;
  width: 168rpx;
  height: 50rpx;
  background: #005b6d;
  border-radius: 26rpx;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
}

.cardBox .active {
  border-color: #d71718;
}

.cardList .activeBtn {
  color: #fff;
  background: #005b6d;
}

.cardList .cardItems .color {
  color: #231f20;
}

.cardList .cardItems .overdue {
  background: #9e9e9e;
}

.cardList .cardItems .overdueBtn {
  background: #fff;
  color: #666;
}

.cardList .cardItems .overduePrice {
  color: #fff;
}
