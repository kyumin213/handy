/* pages/newborn/newborn.wxss */

view {
  line-height: 1;
}

.color {
  color: #d21816;
}
.newbom{
  width: 100%;
   background: #fff; 
  position: fixed;
  top: 0;
  bottom: 0;
  overflow-y: auto;
}
.newbom::-webkit-scrollbar{
  display: none;
}

.headTop {
  width: 100%;
  height: 228rpx;
  background: -webkit-linear-gradient(left, #d71718, #d7173b);
}

.topImg {
  width: 184rpx;
  height: 184rpx;
  border-radius: 100%;
  background: #D21816;
  margin: 0 auto;
  margin-top: -106rpx;
  border: 14rpx solid #ccc;
  /* box-shadow: 4rpx 22rpx 24rpx #CD3700; */
}

.headImg {
  width: 100%;
  text-align: center;
}

.headTxt {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  color: #333;
  margin-top: 28rpx;
}

.headTxt .level {
  margin: 0 auto;
  margin-top: 18rpx;
  width: 80rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: #d21816;
  font-size: 26rpx;
  color: #fff;
  border-radius: 10rpx;
}

.levelList {
  margin-top: 74rpx;
}

.levelItem {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 0 62rpx 0 134rpx;
  box-sizing: border-box;
  height: 122rpx;
  
}

.levelList .unfinished{
  color: #ccc;
}
.levelItem .cardNum {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.levelItem .levelTxt {
  font-size: 30rpx;
  font-weight: bold;
}

.levelItem .consumn {
  font-size: 26rpx;
  color: #666;
  margin-top: 16rpx;
}
.levelList .unfinished{
  color: #ccc;
}

.levelLeft{
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  width: 100%;
  position: relative;
}
.levelItem .step{
  width: 4rpx;
  height: 122rpx;
  background: #ccc;
  /* margin-right: 52rpx; */
  position: absolute;
  top: 0;
  left: -52rpx;
}
.levelItem:first-child .step{
  position: absolute;
  top: 20rpx;
  height: 132rpx; 
}
.levelItem .step .onStep{
  display: inline-block;
  position: absolute;
  top:30rpx; 
  left: 50%; 
  width: 26rpx;
  height: 26rpx;
  margin-left: -13rpx;
  background: #ccc;
  border-radius: 100%;
}
.levelItem:first-child .step,.levelItem:nth-child(2) .step{
  background: #d21816;
}
.levelItem:first-child .step .onStep{
  background: #fff;
  border: 8rpx solid #d21816;
   margin-left: -21rpx; 
   top: 0;
}

.levelItem .step .levelFinish{
  background: #d21816;
}
.levelItem .levelRight{
  width: 100%;
}
.levelItem .finishNum{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}