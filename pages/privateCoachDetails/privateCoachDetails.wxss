.animation {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.1);
  z-index: 99;
  height: 100%;
}

.payModal {
  position: absolute;
  height: 500rpx;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 1000;
  width: 100%;
}

.payModal .modelTit {
  text-align: center;
  margin-top: 60rpx;
  font-size: 34rpx;
}

.payModal .courseCon {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 80rpx 80rpx 0 80rpx;

  font-size: 30rpx;
}

.payModal .modelBtn {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 100rpx;
}

.payModal .modelBtn .cancel {
  width: 50%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  background: #f2f2f2;
}

.payModal .modelBtn .comfir {
  width: 50%;
  text-align: center;
  background: #F96400;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
}

.showModal {
  transform: rotate(0deg) scale(1) translateY(500);
  transition: linear 2s;
  -webkit-transform: rotate(0deg) scale(1) translateY(500);
}

.hideModal {
  transform: translateY(0);
  transition: ease-in-out 1s;
  -webkit-transform: translateY(0);
}
