/* 课程介绍 */

.courseImg {
  width: 238rpx;
  height: 84rpx;
  margin: 28rpx auto 16rpx auto;
}

.courseIcon {
  width: 238rpx;
  height: 84rpx;
}

.titles {
  width: 252rpx;
  height: 46rpx;
  line-height: 46rpx;
  background: #d71718;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16rpx;
  margin: 40rpx auto auto auto;
  position: relative;
}

.titles::after {
  content: "";
  position: absolute;
  top: 50%;
  left: -120rpx;
  width: 104rpx;
  height: 2rpx;
  background: #d60b0b;
}

.titles::before {
  content: "";
  position: absolute;
  top: 50%;
  right: -120rpx;
  width: 104rpx;
  height: 2rpx;
  background: #d60b0b;
}

