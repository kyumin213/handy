  width: 202rpx;
  height: 202rpx;
  border-radius: 100%;
  background: #ccc;
  background-size: cover;
}

.curriculumItem .des {
  font-size: 26rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* line-height: 36rpx; */
  margin-top: 18rpx;
}

.curriculumItem .des .txtDes {
  /* display: inline-block; */
  line-height: 36rpx;
}
.attenName{
  font-size: 30rpx;
  color: #333;
}

