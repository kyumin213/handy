  text-align: center;
  line-height: 46rpx;
}

.tabs .active {
  background: #ececec;
  color: #333;
  font-weight: bold;
}

.curriculumItem {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: auto;
  padding: 18rpx 50rpx 54rpx 48rpx;
  box-sizing: border-box;
  border-bottom: 24rpx solid #f2f2f2;
  /* margin-top: 34rpx; */
