/* 课程tab */

.detailTab {
  width: 100%;
  text-align: center;
  border-top: 24rpx solid #f2f2f2;
  background: #fff;
  z-index: 999;
}

.detailTab .tabs {
  width: 690rpx;
  height: 66rpx;
  line-height: 66rpx;
  border: 4rpx solid #d60b0b;
