/* pages/course/course.wxss */

page {
  background: #005b6d;
}

.headImg {
  width: 100%;
  height: 300rpx;
}

.bannerImg {
  width: 100%;
}

.addressCon {
  width: 604rpx;
  height: 70rpx;
  line-height: 70rpx;
  /* display: flex;
  align-items: center;
  justify-content: space-between; */
  position: absolute;
  top: 20rpx;
  left: 74rpx;
  text-align: center;
}

.addressLeft {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  text-align: center;
  height: 100%;
  background: #fff;
  border-radius: 10rpx;
}

.addressCon .addressIcon {
  width: 30rpx;
  height: 44rpx;
  margin-right: 30rpx;
}

.searchBtn {
  width: 160rpx;
  height: 60rpx;
  font-size: 26rpx;
  color: #333;
  background: #fff;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
}

.addressTxt {
  font-size: 30rpx;
  color: #999;
}

/* 日期 */

.showWeek {
  width: 100%;
  height: 110rpx;
  background: #fff;
}

.weekDays {
  padding-top: 46rpx;
  margin: 0 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #999;
}

.weekDays .weekDay {
  display: inline-block;
  /* width: 94rpx; */
  text-align: center;
  color: #080609;
  position: relative;
}

.weekDays .weeks {
  position: absolute;
  bottom: 0;
  left: -22rpx;
  z-index: 101;
  width: 54rpx;
  text-align: center;
}

.dayDatas {
  margin: 6rpx 16rpx 0 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
}

.dayDatas .dayData {
  color: #333;
  font-size: 36rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 100;
  text-align: center;
}

.dayDatas .days {
  position: absolute;
  top: 0;
  left: -22rpx;
  z-index: 99;
  width: 54rpx;
  height: 30rpx;
  text-align: center;
}

.dayDatas .active {
  border-radius: 100%;
  color: #fff;
  background: #f96400;
  position: absolute;
  width: 74rpx;
  height: 74rpx;
  text-align: center;
  top: -30rpx;
  left: -32rpx;
  bottom: 0;
  z-index: 0;
}

/* 课程 */

.courseList {
  padding-bottom: 100rpx;
}

.curriculumItem {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 200rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  background: #fff;
  margin: 2rpx 30rpx 0 30rpx;
  border-radius: 20rpx;
  /* border-top: 4rpx solid #211e1e;
  border-bottom: 4rpx solid #1e211e; */
}

.curriculumItem .curriLeft {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 80%;
}

.headImgBox {
  width: 148rpx;
  height: 148rpx;
  border-radius: 100%;
}

.curriculumItem .curriculumImg {
  width: 148rpx;
  height: 148rpx;
  border-radius: 100%;
  background: #ccc;
}

.curriculumItem .curriDes {
  margin-left: 26rpx;
}

.curriculumItem .curriLabel {
  display: inline-block;
  text-align: center;
  /* width: 66rpx; *//* padding: 0 10rpx; *//* height: 26rpx; */
  line-height: 26rpx;
  /* border: 2rpx solid #999; */
  border-radius: 6rpx;
  font-size: 22rpx;
  color: #999;
  margin-right: 16rpx;
}

.curriculumItem .curriName {
  font-size: 32rpx;
  color: #333;
  height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.curriculumItem .labels {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 20rpx;
  height: 26rpx;
}

.curriculumItem .prices {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 20rpx;
}

.prices .price {
  display: inline-block;
  font-size: 36rpx;
  color: #f96400;
}

.prices .priceIcon {
  display: inline-block;
  font-size: 24rpx;
  color: #f96400;
}

.hanPrice {
  display: inline-block;
  /* width: 130rpx; */
  height: 26rpx;
  line-height: 26rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: #f96400;
  border-radius: 14rpx;
  margin-left: 10rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.startTime {
  height: 100%;
  text-align: center;
}

.startTime .times {
  font-size: 26rpx;
  color: #f96400;
  box-sizing: border-box;
  font-weight: bold;
  width: 184rpx;
  height: 44rpx;
  line-height: 44rpx;
  margin-bottom: 32rpx;
  background: #ffe5e5;
  border-bottom-left-radius: 30rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 6rpx;
}

.startTime .endClass {
  background: #f5f5f5;
  color: #ccc;
}

.startTime .appointment {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  background: #f96400;
  font-size: 28rpx;
}

.startTime .endBtn {
  background: #ccc;
}

.startTime .check {
  background: #ccc;
  color: #f96400;
}

.reserve {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.reserve .reserveBtn {
  height: 98rpx;
  line-height: 98rpx;
  background-color: #f96400;
  color: #fff;
  border-radius: 0;
  font-size: 32rpx;
}

.isnull {
  width: 100%;
  text-align: center;
  color: #999;
  margin-top: 200rpx;
  font-size: 32rpx;
}

.animation {
  background: rgba(0, 0, 0, 0);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: -100%;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.animation-content {
  width: 572rpx;
  height: 100%;
  background: #fff;
  position: absolute;
  left: -572rpx;
  bottom: 0;
  font-size: 30rpx;
  color: #666;
}

.animation-content .listLeft {
  position: absolute;
  top: 84rpx;
  bottom: 0;
  left: 0;
  width: 124rpx;
  background: #f2f2f2;
}

.animation-content .listCenter {
  position: absolute;
  top: 84rpx;
  left: 124rpx;
  width: 168rpx;
  bottom: 0;
  background: #f7f7f7;
  padding-top: 24rpx;
  text-align: center;
}

.animation-content .listCenter .area {
  margin-bottom: 12rpx;
  height: 68rpx;
  line-height: 68rpx;
}

.animation-content .listCenter .areaOn {
  color: #f96400;
}

.animation-content .listRight {
  background: #fff;
  position: absolute;
  top: 84rpx;
  bottom: 0;
  left: 292rpx;
  width: 282rpx;
  padding-top: 24rpx;
}

.animation-content .modelBtn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 102rpx;
}

.animation-content .modelBtn .clearBtn {
  display: inline-block;
  width: 40%;
  line-height: 102rpx;
  color: #fff;
  background: #005b6d;
  text-align: center;
  font-size: 36rpx;
}

.animation-content .modelBtn .subBtn {
  display: inline-block;
  width: 60%;
  line-height: 102rpx;
  background: #f96400;
  text-align: center;
  color: #f2f2f2;
  font-size: 36rpx;
}

.pztitle {
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 30rpx;
  color: #fff;
  padding-left: 58rpx;
  background: #005b6d;
  box-sizing: border-box;
}

.city {
  width: 124rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  border-radius: 34rpx;
  margin: 22rpx auto auto auto;
}

.storeNames {
  width: 190rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  background: #fff;
  border-radius: 34rpx;
  margin: 0 auto 22rpx auto;
}

.inputzone {
  display: flex;
  align-items: flex-start;
  justify-content: space-around;
}

.tabActive {
  /* background: #F96400; */
  color: #f96400;
}

.modelShow {
  transform: rotate(0deg) scale(1) translate(100%, 0%);
  transition: ease-in-out 0.2s;
  -webkit-transform: rotate(0deg) scale(1) translate(100%, 0%);
}

.hideModel {
  transform: rotate(0deg) scale(1) translate(-100%, 0%);
  transition: ease-in-out 0.2s;
  -webkit-transform: rotate(0deg) scale(1) translate(-100%, 0%);
}

/* 课程选项 */

.courseTab {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  height: 84rpx;
  border-top: 2rpx solid #e6e6e6;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  font-size: 32rpx;
  color: #333;
  padding: 0 120rpx;
}

.courseTab text {
  display: inline-block;
  width: 188rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  box-sizing: border-box;
}

.courseTab .tabOn {
  border-bottom: 10rpx solid #f96400;
  color: #f96400;
}

.scroll-h {
  height: 100%;
}
