/* pages/course/comfirPayment/comfirPayment.wxss */

page {
  background: #f5f5f5;
}

/* 课程时间地点 */

.courseDes {
  width: 100%;
  height: auto;
  background: #fff;
  box-sizing: border-box;
  padding-bottom: 36rpx;
}

.courseDes .des {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 60rpx 72rpx 0 60rpx;
}

.des .desTxt, .des .price {
  font-size: 36rpx;
}

.courseTime {
  padding-left: 60rpx;
  font-size: 28rpx;
  color: #666;
  margin-top: 26rpx;
}

.address {
  display: flex;
  justify-content: flex-start;
  font-size: 28rpx;
  color: #666;
  padding-left: 60rpx;
  margin-top: 22rpx;
}

.address .addressTxt {
  line-height: 36rpx;
}

/* 人数 */

.desList {
  width: 100%;
  height: auto;
  background: #fff;
}

.peopleNum {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 34rpx 20rpx 58rpx;
  background: #fff;
}

.peopleNum .NumTxt {
  font-size: 28rpx;
  color: #333;
}

.peopleNum .peoBtn {
  width: 138rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  background: #d60b0b;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}

.card {
  padding-bottom: 36rpx;
  border-top: 2rpx solid #f2f2f2;
  margin-bottom: 0;
  margin-right: 50rpx;
}

.cardTxt {
  font-size: 28rpx;
  color: #666;
}

.jt {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-top: 2rpx solid #373737;
  border-right: 2rpx solid #373737;
  transform: rotate(45deg);
  margin-left: 4rpx;
}

/* 支付 */

.payType {
  width: 100%;
  /* height: 596rpx; */
  background: #fff;
  margin-top: 20rpx;
}

.payTitle {
  font-size: 32rpx;
  color: #333;
  padding: 52rpx 0 18rpx 0;
  border-bottom: 2rpx solid #f2f2f2;
  margin: 0 30rpx;
}

.payTitle .txt {
  padding-left: 28rpx;
}

.payList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 30rpx 0 30rpx;
  height: 104rpx;
  border-bottom: 2rpx solid #f2f2f2;
  box-sizing: border-box;
}

.payList .hanTxt {
  font-size: 28rpx;
  color: #333;
  margin-left: 32rpx;
}

.payList .hanIcon {
  width: 82rpx;
  height: 28rpx;
}

.payList .hanIcon2 {
  width: 80rpx;
}
.payList .payRight {
  margin-right: 32rpx;
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: flex-end;
}
.payList .hanOn {
  width: 50rpx;
  /* height: 50rpx; */
  border-radius: 100%;
}

.payList .payLeft {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-left: 26rpx;
}



.tips {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  margin: 40rpx 110rpx 0 46rpx;
  font-size: 22rpx;
  color: #999;
  padding-bottom: 108rpx;
  /* margin-top: 40rpx; */
}

.tipsRight {
  line-height: 36rpx;
}

.tips .tsTxt {
  padding-top: 6rpx;
}

.comfir {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  margin-top: 80rpx;
  height: 108rpx;
  background: #d71718;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
   font-size: 32rpx;
}

.comfirBtn {
  font-size: 32rpx;
}

.payMoney {
  font-size: 48rpx;
}
