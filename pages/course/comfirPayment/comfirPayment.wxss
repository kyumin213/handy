/* pages/course/comfirPayment/comfirPayment.wxss */

page {
  background: #005b6d;
}

/* 课程时间地点 */

.courseDesTop {
  margin: 26rpx 30rpx 22rpx 30rpx;
  border-radius: 20rpx;
  background: #fff;
  /* padding-bottom: 6rpx; */
  box-sizing: border-box;
}

.courseDes {
  width: 100%;
  height: auto;
  /* background: #fff; */
  box-sizing: border-box;
  padding-bottom: 16rpx;
}

.courseDes .des {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 42rpx 40rpx 0 30rpx;
}

.des .desTxt, .des .price {
  font-size: 36rpx;
  color: #333;
}

.courseTime {
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #666;
  margin-top: 26rpx;
}

.address {
  display: flex;
  justify-content: flex-start;
  font-size: 28rpx;
  color: #666;
  padding-left: 30rpx;
  margin-top: 22rpx;
}

.address .addressTxt {
  line-height: 36rpx;
}

/* 人数 */

.desList {
  width: 100%;
  height: auto;
  background: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.peopleNum {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx 0 30rpx;
  height: 108rpx;
  /* background: #fff; */
}

.peopleNum .NumTxt {
  font-size: 32rpx;
  color: #333;
}

.peopleNum .peoBtn {
  width: 138rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: #f96400;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}

.card {
  /* padding-bottom: 36rpx; */
  border-top: 2rpx solid #f2f2f2;
  margin-bottom: 0;
  box-sizing: border-box;
  /* margin-right: 50rpx; */
}

.cardTxt {
  font-size: 28rpx;
}

.jt {
  /* display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-top: 2rpx solid #373737;
  border-right: 2rpx solid #373737;
  transform: rotate(45deg);
  margin-left: 4rpx; */
  display: inline-block;
  border-top: 11rpx solid transparent;
  border-left: 22rpx solid #999999;
  border-bottom: 11rpx solid transparent;
  margin-left: 16rpx;
}

/* 支付 */

.payType {
  /* width: 100%; *//* height: 596rpx; */
  background: #fff;
  margin: 0 30rpx 170rpx 30rpx;
  border-radius: 20rpx;
  height: auto;
}

.payTitle {
  font-size: 36rpx;
  color: #333;
  /* padding: 52rpx 0 18rpx 0; */
  height: 106rpx;
  line-height: 106rpx;
  border-bottom: 2rpx solid #f2f2f2;
  /* margin: 0 30rpx; */
}

.payTitle .txt {
  padding-left: 28rpx;
}

.payList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* margin: 0 30rpx 0 30rpx; */
  height: 104rpx;
  /* border-bottom: 2rpx solid #f2f2f2; */
  box-sizing: border-box;
}

.payList .hanTxt {
  font-size: 28rpx;
  color: #333;
  margin-left: 32rpx;
}

.payList .hanIcon {
  width: 50rpx;
  height: 50rpx;
}

.payList .payRight {
  margin-right: 32rpx;
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: flex-end;
}

.payList .hanOn {
  width: 50rpx;
  /* height: 50rpx; */
  border-radius: 100%;
}

.payList .payLeft {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-left: 26rpx;
}

.tips {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  margin: 40rpx 54rpx 0 46rpx;
  font-size: 22rpx;
  color: #999;
  /* padding-bottom: 62rpx; */
  /* margin-top: 40rpx; */
}

.tipsRight {
  line-height: 36rpx;
}

.tips .tsTxt {
  padding-top: 6rpx;
}

.comfir {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  margin-top: 80rpx;
  height: 108rpx;
  background: #f96400;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
  font-size: 32rpx;
}

.comfirBtn {
  font-size: 32rpx;
}

.payMoney {
  font-size: 48rpx;
}
