/* pages/qrcode/qrcode_buy.wxss */
view{
  line-height: 1;
}
.bgCon {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 108rpx;
  background: #d71718;
}
.courseMes{
  width: 690rpx;
  height: 288rpx;
  border-radius: 20rpx;
  background: #fff;
  margin: 48rpx auto 58rpx auto;
   box-sizing: border-box;
}
.courseDes{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 42rpx 42rpx 36rpx 30rpx;
  color: #333333;
}
.courseTime{
  font-size: 28rpx;
  padding-left: 30rpx;
}
.payTxt{
  margin-left: 46rpx;
  font-size: 36rpx;
  color: #fff;
  margin-bottom: 22rpx;
}
.courseAddress{
  width: 570rpx;
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
  padding-left: 30rpx;
  margin-top: 22rpx;
}
.courseAddress .addressTxt{
  width:15%;

}
.courseAddress .addressDes{
  width: 85%;
  line-height: 36rpx;
}
.payList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 30rpx 0 30rpx;
  height: 104rpx;
  /* border-bottom: 2rpx solid #f2f2f2; */
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 14rpx;
}

.payList .hanTxt {
  font-size: 32rpx;
  color: #333;
  margin-left: 32rpx;
}

.payList .hanIcon {
  width: 82rpx;
  height: 28rpx;
}

.payList .hanIcon2 {
  width: 80rpx;
}
.payList .payRight {
  margin-right: 32rpx;
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: flex-end;
}
.payList .hanOn {
  width: 50rpx;
  /* height: 50rpx; */
  border-radius: 100%;
}

.payList .payLeft {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-left: 26rpx;
}



.tips {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  margin: 38rpx auto 0 84rpx;
  font-size: 22rpx;
  padding-bottom: 108rpx;
  color: #FFFFFF;
  /* margin-top: 40rpx; */
}

.tipsRight {
  line-height: 36rpx;
}

.tips .tsTxt {
  padding-top: 6rpx;
}

.footer{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 108rpx;
  background: #231F20;
  color: #fff;
  text-align: center;
  line-height: 108rpx;
}
.footer .txt{
  font-size: 36rpx;
}
.footer .money{
  font-size: 48rpx;
}
.backBtn{
  width: 350rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #fff;
  border-radius: 20rpx;
  margin: 0 auto;
  color: #d71718;
  font-size: 32rpx;
}