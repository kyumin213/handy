/* pages/attention/attention.wxss */

page {
  background: #f2f2f2;
}

button::after {
  border: none;
}

.tabs {
  position: fixed;
  top: 0;
  width: 100%;
  height: 114rpx;
  margin: 0 auto;
  font-size: 32rpx;
  background: #fff;
  z-index: 99;
}

.tabs .tabCon {
  width: 70%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.tabs .private, .tabs .team {
  width: 50%;
  /* background: #f00; */
  height: 114rpx;
  line-height: 114rpx;
  text-align: center;
  box-sizing: border-box;
  border-bottom: 8rpx solid #fff;
}

.tabs .active {
  border-bottom: 8rpx solid #f96400;
  color: #f96400;
}

.headTop {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  height: 88rpx;
  font-size: 26rpx;
  color: #333;
}

.addressLeft {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: auto;
  height: 60rpx;
  background: #fff;
  text-align: left;
  border-radius: 10rpx;
  padding-right: 18rpx;
}

.addressIcon {
  width: 38rpx;
  height: 38rpx;
  margin-left: 22rpx;
}

.headTop .address, .headTop .searchBtn {
  display: inline-block;
  text-align: center;
  width: 192rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  border-radius: 10rpx;
}

.headTop .address {
  width: auto;
  margin-right: 18rpx;
}

.headTop .searchBtn {
  width: 160rpx;
  color: #000;
}

.attentionList {
  margin: 130rpx 30rpx 30rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.attentionList .items {
  /* display: flex;
  align-items: center;
  justify-content: flex-start; */
  width: 336rpx;
  height: 564rpx;
  background: #fff;
  margin-bottom: 16rpx;
  /* padding: 0 0 38rpx 0; */
  box-sizing: border-box;
  border-radius: 20rpx;
}

.attentionList .items:nth-child(odd) {
  margin-right: 18rpx;
}

.attentionList .itemRight {
  /* padding: 62rpx 34rpx 52rpx 22rpx; */
  margin-left: 22rpx;
  margin-right: 60rpx;
}

.imgBox {
  width: 336rpx;
  height: 352rpx;
  /* overflow: hidden; */
}

.imgBox .attenImg {
  width: 336rpx;
  height: 352rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.attentionList .attenName {
  font-weight: bold;
  line-height: 1;
}

.attentionList .zan {
  display: flex;
  justify-content: flex-start;
  font-size: 24rpx;
  color: #d61518;
  margin-bottom: 12rpx;
  line-height: 1;
}

.attentionList .zan .zanNum {
  margin-right: 14rpx;
}

.attentionList .des {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  line-height: 36rpx;
  /* margin-top: 20rpx; */
  color: #666;
}

.attentionList .follow {
  /* display: inline-block;  */
  padding: 0;
  font-size: 20rpx;
  width: 106rpx;
  height: 38rpx;
  border-radius: 10rpx;
  border: 2rpx solid #f96400;
  color: #f96400;
  background: #fff;
  text-align: center;
  line-height: 38rpx;
  /* box-sizing: border-box; */
}

.attentionList .unfollow {
  background: #f96400;
  color: #fff;
}

.attentionList .rightTitle {
  font-size: 30rpx;
  margin: 20rpx auto 16rpx auto;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #f5f5f5;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  font-size: 30rpx;
}

.swiper-tab-item {
  display: inline-block;
  width: 50%;
  color: #999;
}

.tab-item {
  flex: 1;
  font-size: 30rpx;
  display: inline-block;
  color: #777;
}

.on {
  color: #4ca835;
  border-bottom: 4rpx solid #4ca835;
}

.swiper {
  display: block;
  height: 200rpx;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}
.scoll-h{height: 100%;}