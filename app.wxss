  z-index: 9999;
}

.close {
  height: 120rpx;
  line-height: 120rpx;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.closeIcon {
  display: inline-block;
  width: 4rpx;
  height: 40rpx;
  background: #333;
  transform: rotate(45deg);
  margin-left: 10rpx;
}

.closeIcon::before {
  content: '';
  width: 4rpx;
  height: 40rpx;
  background: #333;
  position: absolute;
  transform: rotate(-90deg);
}

