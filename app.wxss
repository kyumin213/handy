/* 选择支付方式 */
.selectPay{
  display: inline-block;
  width: 42rpx;
  height: 42rpx;
  border-radius: 100%;
  border: 4rpx solid #ccc;
  position: relative;
}

.selectPay::before{
  content: '';
  position: absolute;
  top: 12rpx;
  left: 10rpx;
  width: 20rpx;
  height: 10rpx;
  border-left: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: rotate(-45deg);
}
.selectActive{
  background: #F96400;
  border-color: #F96400;
}
